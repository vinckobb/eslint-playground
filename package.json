{
    "name": "eslint-playground",
    "version": "1.0.0",
    "scripts": {
        "lint": "eslint --ext .ts src/app"
    },
    "devDependencies": {
        "eslint": "7.3.1",
        "@typescript-eslint/parser": "3.4.0",
        "typescript": "3.9.5",
        "husky": "4.2.5",
        "lint-staged": "10.2.11"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/*.{ts}": [
            "eslint --ext .ts src --fix-dry-run"
        ]
    }
}
